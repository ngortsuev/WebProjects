@model Word
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Word</h2>
<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit" asp-controller="Dictionary" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="WordEng"></label>
                <input asp-for="WordEng" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="WordRu"></label>
                <input asp-for="WordRu" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>

