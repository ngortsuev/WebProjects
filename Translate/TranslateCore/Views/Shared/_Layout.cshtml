<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TranslateCore</title>    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Translate" asp-action="Index">Translate</a></li>
                    <li><a asp-area="" asp-controller="Dictionary" asp-action="Index">Dictionary</a></li>
                    <li><a asp-area="" asp-controller="Langs" asp-action="Index">Languages</a></li>
                    <li><a asp-area="" asp-controller="IrregularVerbs" asp-action="Index">Irregular Verbs</a></li>
                    <li><a asp-area="" asp-controller="Verbs" asp-action="Index">Verbs</a></li>
                    <li><a asp-area="" asp-controller="Pronouns" asp-action="Index">Pronouns</a></li>
                    <li><a asp-area="" asp-controller="Colors" asp-action="Index">Colors</a></li>
                    <li><a asp-area="" asp-controller="Numbers" asp-action="Index">Numbers</a></li>
                    <li><a asp-area="" asp-controller="WordTypes" asp-action="Index">Word Types</a></li>
                    <li><a asp-area="" asp-controller="WordCategory" asp-action="Index">Categories</a></li>
                    <li><a asp-area="" asp-controller="WordSubCategory" asp-action="Index">Sub Categories</a></li>                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul> 
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - TranslateCore</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/translate.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
