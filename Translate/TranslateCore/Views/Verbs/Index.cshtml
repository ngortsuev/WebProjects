@model IEnumerable<Verb>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <div class="caption">
            <h2>Verbs</h2>

            <a class="btn btn-primary" asp-action="Create" asp-controller="Verbs">Create word</a>
        </div>       
        <table id="dictionary" class="table table-striped">
            <tr><th>Id</th><th>English</th><th>Russia</th><th></th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No verbs</td></tr>
            }
            else
            {
                @foreach (var verb in Model)
                {
                    <tr>
                        <td>@verb.Id</td>
                        <td>@verb.VerbEng</td>
                        <td>@verb.VerbRu</td>
                        <td>
                            <form asp-controller="Dictionary" asp-action="Verbs" asp-route-id="@verb.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-controller="Verbs" asp-action="Edit" asp-route-id="@verb.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

