@model  Word
@{
    ViewData["Title"] = "Index";
}

<h2>Translate</h2>

<div class="row">
    <div class="col-md-6">
        <label>English</label>
        <textarea class="form-control" rows="8" id="wordeng" onkeypress="translate(event);"></textarea>
    </div>
    <div class="col-md-6">
        <label>Russia</label>
        <textarea class="form-control" rows="8" id="wordru"></textarea>
    </div>
</div>
<script src="~/js/translate.js"></script>

