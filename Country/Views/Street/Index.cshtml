@model  IEnumerable<Street>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h2>Streets</h2>
        <table class="table table-striped">
            <tr><th>Id</th><th>Name</th><th>City</th><th>Region</th><th>Country</th><th>Buildings</th><th></th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Street</td></tr>
            }
            else
            {
                foreach (var street in Model)
                {
                    <tr>
                        <td>@street.Id</td>
                        <td>@street.Name</td>
                        <td>@street.City?.Name</td>
                        <td>@street.City?.Region?.Name</td>
                        <td>@street.City?.Country?.Name</td>
                        <td>@street.Buildings</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@street.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@street.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
</div>

