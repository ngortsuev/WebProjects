<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Country EF Core</title>    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">CountryWeb</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Continent" asp-action="Index" asp-route-id="All">Continents</a></li>
                    <!--
                    <li><a asp-area="" asp-controller="Country" asp-action="Index">Countries</a></li>
                    <li><a asp-area="" asp-controller="Region" asp-action="Index">Regions</a></li>
                    <li><a asp-area="" asp-controller="City" asp-action="Index">Cities</a></li>
                    <li><a asp-area="" asp-controller="Street" asp-action="Index">Streets</a></li>
                    <li><a asp-area="" asp-controller="Address" asp-action="Index">Addresses</a></li>
                    -->
                </ul>
            </div>
        </div>
    </nav>    

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Country</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/country.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
