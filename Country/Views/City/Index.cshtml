@model IEnumerable<CountryWeb.Models.City>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col">
        <h2>Cities</h2>
        <table class="table table-striped">
            <tr><th>Id</th><th>Name</th><th>Region</th><th>Country</th><th></th><th></th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Cities</td></tr>
            }
            else
            {
                foreach (var city in Model)
                {
                    <tr>
                        <td>@city.Id</td>
                        <td>@city.Name</td>
                        <td>@city.Region?.Name</td>
                        <td>@city.Country?.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@city.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@city.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
</div>
