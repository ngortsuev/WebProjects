@model  IEnumerable<Address>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h2>Addresses</h2>
        <table class="table table-striped">
            <tr><th>Id</th><th>Country</th><th>Region</th><th>City</th><th>Street</th><th>Building</th><th>Flat</th><th></th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Address</td></tr>
            }
            else
            {
                foreach (var address in Model)
                {
                    <tr>
                        <td>@address.Id</td>
                        <td>@address.Country?.Name</td>
                        <td>@address.Region?.Name</td>
                        <td>@address.City?.Name</td>
                        <td>@address.Street.Name</td>
                        <td>@address.Building</td>
                        <td>@address.Flat</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@address.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@address.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
</div>

