@model IEnumerable<CountryWeb.Models.Region>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h2>Regions</h2>
        <table class="table table-striped">
            <tr><th>Id</th><th>Name</th><th>Country</th><th>Cities</th><th></th><th></th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Regions</td></tr>
            }
            else
            {
                foreach (var region in Model)
                {
                    <tr>
                        <td>@region.Id</td>
                        <td>@region.Name</td> 
                        <td>@region.Country?.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@region.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
</div>


