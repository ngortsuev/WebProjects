@model UserEvent
@{
    ViewData["Title"] = "Edit Task";
}

<div class="bg-primary panel-body"><h2>Edit Task</h2></div>

<div asp-validation-summary=" All" class="text-danger"></div>

<div class="row">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="BeginTime"></label>
            <input asp-for="BeginTime" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Notify"></label>
            <input asp-for="Notify" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RepeatNotify"></label>
            <input asp-for="RepeatNotify" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RepeatCount"></label>
            <input asp-for="RepeatCount" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </form>
</div>

