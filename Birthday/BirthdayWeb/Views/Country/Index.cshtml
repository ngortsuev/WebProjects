@model IEnumerable<Country>

@{
    ViewData["Title"] = "Countries";
}

<h2>Countries</h2>

<div class="container-fluid">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="3" class="text-center">No Tasks</td></tr>
                }
                else
                {
                    @foreach (var country in Model)
                    {
                        <tr>
                            <td>@country.Id</td>
                            <td>@country.Name</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@country.Id" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@country.Id">Edit</a>
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
